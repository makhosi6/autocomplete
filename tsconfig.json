{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "declaration": false,
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "build",
    "target": "ES2015",
    "skipLibCheck": true
  },

  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "node_modules",
      "build",
      "deployment/*"
    ]
  },
  "exclude": ["node_modules", "**/node_modules", "deployment/**/*.js"],
  "include": ["src/**/*.ts", "test/**/*.ts","src/**/*.txt","src/**/*.json"]
}
