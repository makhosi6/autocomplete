{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "declaration": false,
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "build",
    "target": "ES2015"
  },

  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "build", "deployment/*"]
  },
  "exclude": ["node_modules", "**/node_modules", "deployment/**/*.js"],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
